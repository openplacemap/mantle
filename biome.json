{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

  "files": {
    "ignoreUnknown": true,
    "includes": ["src/**/*", "package.json", "biome.json", "tsconfig.json"]
  },

  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100,
    "indentStyle": "space"
  },

  "assist": {
    "actions": { "source": { "organizeImports": "off" } }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": { "noFloatingPromises": "error" }
    }
  }
}
